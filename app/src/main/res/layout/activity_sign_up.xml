<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

        <RelativeLayout

            android:id="@+id/nav_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/actionbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    android:minHeight="?attr/actionBarSize"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:theme="?attr/actionBarTheme" />

            <Button
                android:id="@+id/back_nav"
                android:layout_width="38dp"
                android:layout_height="34dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/abc_vector_test" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="123dp"
                android:layout_height="46dp"
                android:layout_centerInParent="true"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/white_logo" />


        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_content"
        android:layout_width="322dp"
        android:layout_height="505dp"
        android:layout_below="@id/nav_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
      >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Sign Up"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/diaglogue_box_border"
            android:textSize="30sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/fieldEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/sub1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Firstname"
                android:textColor="@color/diaglogue_box_border"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:ems="10"
                android:gravity="left"
                android:hint="Enter name"
                android:inputType="textPersonName"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/sub2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Surname"
                android:textColor="@color/diaglogue_box_border"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/editSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:ems="10"
                android:gravity="left"
                android:hint="Enter surnamename"
                android:inputType="textPersonName"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/sub3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Email"
                android:textColor="@color/diaglogue_box_border"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="left"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark" />


            <RelativeLayout
                android:id="@+id/password_label_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="Password"
                    android:textColor="@color/diaglogue_box_border"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_passwordSpec"
                    android:layout_width="24dp"
                    android:layout_height="23dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/help_btton"
                    android:paddingTop="50dp" />

            </RelativeLayout>


            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fieldEntry"
            android:layout_marginTop="4dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/Terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="By clicking continue, you are thereby agreeing to terms sand condistions Specified"
                android:textAlignment="textStart"
                app:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/termsLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#00FFFFFF"
                android:fontFamily="@font/montserrat"
                android:text="Terms and conditions"
                android:textColor="#03A9F4"
                android:textColorLink="#03A9F4" />

            <CheckBox
                android:id="@+id/TermsCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="Agree" />

            <Button
                android:id="@+id/signup_submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/montserrat"
                android:text="Submit"
                android:textColor="@color/white" />
        </LinearLayout>


    </RelativeLayout>



        </RelativeLayout>



